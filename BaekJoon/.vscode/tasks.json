{
	"version": "2.0.0",
	"tasks": [
			{
					"type": "shell",
					"label": "C bulid for clang",
					"command": "clang",
					"args": [
							"-g",
							"${file}",
							"-o",
							"${fileDirname}/${fileBasenameNoExtension}"
					],
					"options": {
							"cwd": "${workspaceRoot}"
					},
					"presentation": {
							"clear": true
					},
					"group": {
							"kind": "build",
							"isDefault": true
					},
					"problemMatcher": []
			},
			{
					"type": "shell",
					"label": "C++ bulid for clang++",
					"command": "clang++",
					"args": [
							"-g",
							"${file}",
							"-std=c++17",
							"-o",
							"${fileDirname}/${fileBasenameNoExtension}"
					],
					"options": {
							"cwd": "${workspaceRoot}"
					},
					"presentation": {
							"clear": true
					},
					"group": {
							"kind": "build",
							"isDefault": true
					},
					"problemMatcher": [
							"$gcc"
					],
					"detail" : " compiler: /user/bin/class++"
			},
			{
					"type": "shell",
					"label": "Run C++ source code",
					"command": "${fileDirname}/${fileBasenameNoExtension}",
					"group": "test",
					"presentation": {
							"clear": true
					}
			}
	]
}